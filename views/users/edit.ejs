<% include ../partials/header %>

<h1 class="formTitle">Edit Your Profile, <%= user.firstName %> <%= user.lastName %></h1>

<div class="formSize">
  <!-- enctype gives multer middleware access to form input -->
  <form action="/users/<%= user._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label>Username</label>
      <input autofocus class="form-control" type="text" value="<%= user.username %>" name="user[username]">
    </div>

    <div class="form-group">
      <input type="file" name="avatar" id="avatar" class="inputfile" accept="image/*"/>
      <label for="avatar" class="btn btn-info btn-block"><i class="fas fa-cloud-upload-alt"></i> <span>Choose an image file (.jpg .jpeg .png)</span></label>
    </div>

    <div class="row">
      <div class="form-group col">
        <label>Firstname</label>
        <input class="form-control" type="text" value="<%= user.firstName %>" name="user[firstName]">
      </div>
      <div class="form-group col">
        <label>Lastname</label>
        <input class="form-control" type="text" value="<%= user.lastName %>" name="user[lastName]">
      </div>
    </div>
    <div class="form-group">
      <label>Email</label>
      <input class="form-control" type="text" value="<%= user.email %>" name="user[email]">
    </div>
    <div class="form-group">
      <label>Change your Password</label>
      <input class="form-control" type="password" placeholder="enter a new password" name="password" value="">
    </div>
    <div class="form-group">
      <label>Confirm New Password</label>
      <input class="form-control" type="password" placeholder="Confirm your new password" name="confirm" value="">
    </div>
    <div class="form-group">
      <label>Background</label>
      <textarea class="form-control" type="text" name="user[userBackground]" cols="30" rows="5"><%= user.userBackground %></textarea>
    </div>
    <div class="form-group">
      <button class="btn btn-lg btn-block btn-warning">Update</button>
    </div>
  </form>
  <a href="/campgrounds">All Campgrounds</a>
  <a href="/users">All Users</a>

</div>

<% include ../partials/footer %>