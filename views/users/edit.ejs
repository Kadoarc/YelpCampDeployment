<% include ../partials/header %>
<% include ../partials/backgroundPic %>

<div class="row">
  <div class="col-12">
    <h1 class="formTitle">Edit Your Profile, <%= user.firstName %> <%= user.lastName %></h1>
    <div class="formSize footerSpace">
      <!-- enctype gives multer middleware access to form input -->
      <form action="/users/<%= user._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label>Username</label>
          <input required autofocus class="form-control" type="text" value="<%= user.username %>" name="user[username]">
        </div>

        <!-- use JS and css via .inputfile -->
        <div class="form-group">
          <label>Avatar</label>
          <input type="file" name="avatar" id="avatar" class="inputfile" accept="image/*"/>
          <label for="avatar" class="btn btn-warning btn-block"><i class="fas fa-cloud-upload-alt"></i> <span>Update (.jpg .jpeg .png)</span></label>
        </div>

        <div class="row">
          <div class="form-group col">
            <label>Firstname</label>
            <input required class="form-control" type="text" value="<%= user.firstName %>" name="user[firstName]">
          </div>
          <div class="form-group col">
            <label>Lastname</label>
            <input required class="form-control" type="text" value="<%= user.lastName %>" name="user[lastName]">
          </div>
        </div>
        <div class="form-group">
          <label>Email</label>
          <input required class="form-control" type="text" value="<%= user.email %>" name="user[email]">
        </div>
        <div class="form-group">
          <label>Change your Password</label>
          <input class="form-control" type="password" placeholder="New password" name="password" value="">
        </div>
        <div class="form-group">
          <label>Confirm New Password</label>
          <input class="form-control" type="password" placeholder="Confirm new password" name="confirm" value="">
        </div>
        <div class="form-group">
          <label>Background</label>
          <textarea required class="form-control" type="text" name="user[userBackground]" cols="30" rows="5"><%= user.userBackground %></textarea>
        </div>

        <% include ../partials/formSubmit %>

      </form>
    </div>
  </div>
</div>

<% include ../partials/footer %>