<% include ../partials/header %>
<% include ../partials/backgroundPic %>

<div class="row">
  <div class="col-12">
    <h1 class="formTitle">Sign Up!</h1>
    <div class="formSize footerSpace">
      <!-- enctype gives multer middleware access to form input -->
      <form action="/users" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label>Username</label>
          <input autofocus required class="form-control" type="text" placeholder="username" name="username">
        </div>

        <!-- use JS and css via .inputfile -->
        <div class="form-group">
          <label>Avatar</label>
          <input required type="file" name="avatar" id="avatar" class="inputfile" accept="image/*"/>
          <label for="avatar" class="btn btn-info btn-block"><i class="fas fa-cloud-upload-alt"></i> <span>Upload (.jpg .jpeg .png)</span></label>
        </div>

        <div class="row">
          <div class="form-group col">
            <label>Firstname</label>
            <input required class="form-control" type="text" placeholder="Jane" name="firstName">
          </div>
          <div class="form-group col">
            <label>Lastname</label>
            <input required class="form-control" type="text" placeholder="Doe" name="lastName">
          </div>
        </div>
        <div class="form-group">
          <label>Email</label>
          <input required class="form-control" type="text" placeholder="jane@doe.edu" name="email">
        </div>
        <div class="form-group">
          <label>Create a Password</label>
          <input required class="form-control" type="password" placeholder="password" name="password">
        </div>
        <div class="form-group">
          <label>Background</label>
          <textarea required class="form-control" type="text" placeholder="Share a bit about yourself." name="userBackground" cols="30" rows="5"></textarea>
        </div>

        <small><em>*All fields are required.</em></small>
        <% include ../partials/formSubmit %>

      </form>
    </div>
  </div>
</div>

<% include ../partials/footer %>