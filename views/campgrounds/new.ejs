<% include ../partials/header %>
<% include ../partials/backgroundPic %>

<div class="row">
  <div class="col-12">
    <h1 class="formTitle">Create a Campground!</h1>
    <div class="formSize footerSpace">
      <!-- enctype gives multer middleware access to form input -->
      <form action="/campgrounds" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label>Campground Name</label>
          <input required autofocus class="form-control" type="text" placeholder="name" name="campground[name]">
        </div>
        <div class="form-group">
          <label>Campground Location</label>
          <input required id="placesInput" class="form-control" type="text" placeholder="Yellowstone National Park, WY" name="location">
        </div>
        <div class="form-group">
          <label>Price per Night ($)</label>
          <input required class="form-control" type="number" placeholder="price" name="campground[price]" min="0" step="0.01">
        </div>

        <!-- use JS and css via .inputfile -->
        <div class="form-group">
          <label>Picture</label>
          <input required type="file" name="image" id="image" class="inputfile" accept="image/*"/>
          <label for="image" class="btn btn-info btn-block"><i class="fas fa-cloud-upload-alt"></i> <span>Upload (.jpg .jpeg .png)</span></label>
        </div>

        <div class="form-group">
          <label>Campground Description</label>
          <textarea required class="form-control" type="text" placeholder="Share a description!" name="campground[description]" cols="30" rows="5"></textarea>
          <small></small>
        </div>

        <small><em>*All fields are required.</em></small>
        <% include ../partials/formSubmit %>

      </form>
    </div>
  </div>
</div>

<!-- initialize data for Google Places API for dropdown -->
<% include ../partials/googlePlacesInit %>
<% include ../partials/footer %>