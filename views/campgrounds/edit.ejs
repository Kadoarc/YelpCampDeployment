<% include ../partials/header %>
<% include ../partials/backgroundPic %>

<div class="row">
  <div class="col-12">
    <h1 class="formTitle">Edit <%= campground.name %></h1>
    <div class="formSize footerSpace">
      <!-- enctype gives multer middleware access to form input -->
      <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label>Campground Name</label>
          <input autofocus class="form-control" type="text" value="<%= campground.name %>" name="campground[name]">
        </div>
        <div class="form-group">
          <label>Campground Location</label>
          <input id="placesInput" class="form-control" type="text" value="<%= campground.location %>" name="location">
        </div>
        <div class="form-group">
          <label>Price per Night ($)</label>
          <input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]" min="0" step="0.01">
        </div>

        <div class="form-group">
          <input type="file" name="image" id="image" class="inputfile" accept="image/*"/>
          <label for="image" class="btn btn-warning btn-block"><i class="fas fa-cloud-upload-alt"></i> <span>Update (.jpg .jpeg .png)</span></label>
        </div>

        <div class="form-group">
          <label>Campground Description</label>
          <textarea class="form-control" type="text" name="campground[description]" cols="30" rows="5"><%= campground.description %></textarea>
        </div>

        <% include ../partials/formSubmit %>

      </form>
    </div>
  </div>
</div>

<!-- initialize data for Google Places API for dropdown -->
<% include ../partials/googlePlacesInit %>
<% include ../partials/footer %>